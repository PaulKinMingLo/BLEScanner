<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <TextView
        android:id="@+id/ble_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ble_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/ble_name"
        app:layout_constraintTop_toBottomOf="@+id/ble_name" />

    <TextView
        android:id="@+id/ble_TX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/ble_uuid"
        app:layout_constraintTop_toBottomOf="@+id/ble_uuid" />

    <TextView
        android:id="@+id/ble_RSSI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/ble_TX"
        app:layout_constraintTop_toBottomOf="@+id/ble_TX" />

    <TextView
        android:id="@+id/ble_rawData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/ble_RSSI"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ble_RSSI" />

    <TextView
        android:id="@+id/ble_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/ble_rawData"
        app:layout_constraintTop_toBottomOf="@+id/ble_rawData" />
</android.support.constraint.ConstraintLayout>